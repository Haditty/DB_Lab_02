<Window x:Class="Lab_02.Views.RemoveBookDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_02.Views"
        mc:Ignorable="d"
        Title="Remove Book Window" MinHeight="350" MinWidth="200">
    <Grid>
        <Grid>
            <StackPanel Orientation="Vertical">
                <Label Margin="10" />
                <Label Content="Amount:" />
                <TextBox x:Name="AmountTb" Margin="5" TextAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Cancel" Margin="10 50 10 35" Padding="5" Width="100"/>
                    <Button Content="Remove" Margin="10 50 10 35" Padding="5" Width="100"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
