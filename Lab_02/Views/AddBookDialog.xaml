<Window x:Class="Lab_02.Views.AddBookDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_02.Views"
        mc:Ignorable="d"
        Title="Add Book Window" Height="400" Width="300" MinHeight="400" MinWidth="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="Book:" />
            <ComboBox x:Name="BookCb" Margin="5" SelectedIndex="0" DisplayMemberPath="Title"/>
            <Label Margin="10" />
            <Label Content="Amount:" />
            <TextBox x:Name="AmountTb" Margin="5" TextAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Cancel" Margin="10 50 10 35" Padding="5" Width="100" Click="Cancel_Button_Click"/>
                <Button Content="Add" Margin="10 50 10 35" Padding="5" Width="100" Click="Add_Button_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
